{% comment %}
  Render a out of stock text

  usage:
  {% render
    'backorder',
    backOrder: backOrder
  %}
{% endcomment %}

{% assign backorderDate = backOrder | date: '%m/%d/%Y' %}
<div class="c-backOrder">
  <div class="c-backOrder__icon">
    {% render 'icon-backorder', classes: 'o-icon__backOrder' %}
  </div>
  <p class="{{ classes }} c-backOrder__message">
    Backorder
    <span class="c-backOrder__messageInner">
      {{ 'products.product.back_order_label' | t: date: backorderDate }}
    </span>
  </p>
</div>
